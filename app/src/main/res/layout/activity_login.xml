<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginPages.LoginActivity">


    <LinearLayout style="@style/LinearLayoutLoginPages">

        <include layout="@layout/linear_layout_app_name" />

        <include layout="@layout/edit_text_email" />

        <include layout="@layout/edit_text_password" />

        <org.michiganhackers.photoassassin.CustomViews.CustomButton
            android:id="@+id/button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <org.michiganhackers.photoassassin.CustomViews.CustomButton
                android:id="@+id/button_google_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue with facebook" />

            <org.michiganhackers.photoassassin.CustomViews.CustomButton
                android:id="@+id/button_facebook_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue with google" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <org.michiganhackers.photoassassin.CustomViews.CustomButton
                android:id="@+id/button_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password" />

            <org.michiganhackers.photoassassin.CustomViews.CustomButton
                android:id="@+id/button_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onRegisterButtonClick"
                android:text="Register" />
        </LinearLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>