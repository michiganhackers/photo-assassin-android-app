<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="EditTextLoginPages">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/login_page_edit_text_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/economica_bold</item>
    </style>

    <style name="ButtonLoginPages">
        <item name="android:background">@drawable/login_page_button_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/whiteSeventyFivePercentOpacity</item>
        <item name="android:fontFamily">@font/economica_bold</item>
    </style>

    <style name="ButtonNoBackgroundLoginPages">
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/whiteSeventyFivePercentOpacity</item>
        <item name="android:fontFamily">@font/asap</item>
    </style>

    <style name="FakeButtonLoginPages">
        <item name="android:background">@drawable/login_page_button_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LinearLayoutLoginPages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingStart">35dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingEnd">35dp</item>
        <item name="android:paddingRight">35dp</item>
        <item name="android:background">@drawable/gradient_background</item>
    </style>

    <style name="TitleLoginPages">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/economica_bold</item>
        <item name="android:shadowColor">@color/blackShadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">110sp</item>
    </style>

    <style name="ErrorTextAppearanceLoginPages" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HintTextAppearanceLoginPages" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
    </style>

</resources>
