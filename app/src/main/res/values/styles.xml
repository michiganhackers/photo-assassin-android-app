<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/gradient_background</item>
    </style>

    <!--Login Pages Start-->
    <style name="ButtonNoBackgroundLoginPages">
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/whiteSeventyFivePercentOpacity</item>
        <item name="android:fontFamily">@font/asap</item>
    </style>

    <style name="FakeButtonLoginPages">
        <item name="android:background">@drawable/transparent_white_border_button_background</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LinearLayoutLoginPages">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>


    <style name="OutermostLayoutPaddingLoginPages">
        <item name="android:paddingStart">35dp</item>
        <item name="android:paddingLeft">35dp</item>
        <item name="android:paddingEnd">35dp</item>
        <item name="android:paddingRight">35dp</item>
    </style>

    <!--Login Pages End-->

    <style name="PageTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/economica_bold</item>
        <item name="android:shadowColor">@color/blackShadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">10</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">110sp</item>
    </style>

    <style name="ErrorTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RequestImageDialogIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:tint">@color/colorSchemeBrown</item>
    </style>

    <style name="RequestImageDialogText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/asap</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/colorSchemeBrown</item>
    </style>

    <style name="TransparentWhiteEditText">
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/transparent_white_edit_text_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/economica_bold</item>
    </style>

    <style name="TransparentWhiteBorderButton">
        <item name="android:background">@drawable/transparent_white_border_button_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/whiteSeventyFivePercentOpacity</item>
        <item name="android:fontFamily">@font/economica_bold</item>
    </style>

    <style name="TransparentWhiteButton">
        <item name="android:background">@drawable/transparent_white_button_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/whiteNinetyPercentOpacity</item>
        <item name="android:fontFamily">@font/economica_bold</item>
    </style>

    <style name="BackButton">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:background">@drawable/back_button_background</item>
    </style>

    <style name="ProfileScreenStatistics">
        <item name="android:textColor">@color/whiteEightyPercentOpacity</item>
        <item name="android:fontFamily">@font/economica_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="OutermostLayoutPadding">
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingEnd">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">25dp</item>

    </style>

    <style name="Header">
        <item name="android:textColor">@color/whiteSixtyPercentOpacity</item>
        <item name="android:fontFamily">@font/economica_bold</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="AddRemoveFriendIcon">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="AddRemoveFriendText">
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/economica_bold</item>
    </style>


</resources>
